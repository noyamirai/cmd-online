<%- include ('./partials/head.ejs') -%>
<%- include ('./partials/title-banner.ejs') -%>

<body class="<%= className %> yellow-bg">
    <main>
        <ul class="grid grid--overview grid--img">
            <% userData.forEach(item => { %>
            <li>
                <a class="box-shadow" href="#">
                    <img src="<%= item.user.profile_pic %>" alt="Profielfoto van <%= item.user.name.first %>">
                </a>
            </li>
            <% }) %>
        </ul>
         

        <% if (classTeams.length) { %>
            <div class="btn--container">
                <a class="btn--small btn--small-arrow" href="<%= prevURL %>/<%= linkRef %>/home"><img src="<%= root %>/public/images/icons/arrow-icon.svg" alt="Back icon"></a>
            </div>
                
        <% } else { %>
            <div class="btn--container">
                <a class="btn--small btn--small-arrow" href="<%= prevURL %>"><img src="<%= root %>/public/images/icons/arrow-icon.svg" alt="Back icon"></a>
                <a class="btn form-trigger" href="<%= prevURL %>/<%= linkRef %>/teams/team-generation/form">Teams aanmaken</a>
            </div>

            <%- include ('./partials/form.ejs') -%>
        <% } %>
        
    </main>
</body>

<% if (!classTeams.length) { %>
     <script async src="<%= root %>/public/js/form-script.js"></script>
<% } %>